generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("CONNECTION_URL_PRISMA")
}

model Candidato {
  id           Int       @id @default(autoincrement())
  nombre       String
  email        String    @unique
  telefono     String?
  skills       String[]  // array de skills
  experiencia  Int       // a√±os de experiencia
  educacion    String?
  estado       EstadoCandidato @default(PENDIENTE)
  urlLinkedin  String?
  experiencia1 String?
  experiencia2 String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

enum EstadoCandidato {
  PENDIENTE
  PRESELECCIONADO
  ENTREVISTA
  DESCARTADO
  CONTRATADO
}
